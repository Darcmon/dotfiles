#!/bin/bash

# vim
ln -sfv "$DOTFILES_DIR/.vimrc" ~
ln -sfv "$DOTFILES_DIR/.vim" ~
mkdir -p "$HOME/.vim/autoload"
ln -sfv "$DOTFILES_DIR/vim-pathogen/autoload/pathogen.vim" "$HOME/.vim/autoload"

# screen
ln -sfv "$DOTFILES_DIR/.screenrc" ~

# shell
ln -sfv "$DOTFILES_DIR/.sharedrc" ~
ln -sfv "$DOTFILES_DIR/.profile" ~

# zsh
ln -sfv "$DOTFILES_DIR/.zshrc" ~
ln -sfv "$DOTFILES_DIR/.zsh-git-prompt" ~
ln -sfv "$DOTFILES_DIR/.oh-my-zsh" ~
ln -sfv "$DOTFILES_DIR/.iterm2_shell_integration.zsh" ~
mkdir -p "$HOME/.oh-my-zsh/custom/plugins"
ln -sfv "$DOTFILES_DIR/zsh-syntax-highlighting" "$HOME/.oh-my-zsh/custom/plugins"
mkdir -p "$HOME/.oh-my-zsh/custom/themes"
ln -sfv "$DOTFILES_DIR/shad-zsh-theme/shad.zsh-theme" "$HOME/.oh-my-zsh/custom/themes"

# bash
ln -sfv "$DOTFILES_DIR/.bashrc" ~
ln -sfv "$DOTFILES_DIR/.bash_profile" ~
ln -sfv "$DOTFILES_DIR/.bash-git-prompt" ~

# git
ln -sfv "$DOTFILES_DIR/.gitconfig" ~
ln -sfv "$DOTFILES_DIR/.gitignore_global" ~
