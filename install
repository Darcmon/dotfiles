#!/bin/bash

pushd $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

echo "Downloading https://github.com/robbyrussell/oh-my-zsh/"
curl -# -L https://github.com/robbyrussell/oh-my-zsh/archive/master.zip -o oh-my-zsh.zip
rm -rf oh-my-zsh-master
unzip -q oh-my-zsh.zip

echo "Downloading https://github.com/shadanan/zsh-git-prompt/"
curl -# -L https://github.com/shadanan/zsh-git-prompt/archive/master.zip -o zsh-git-prompt.zip
rm -rf zsh-git-prompt-master
unzip -q zsh-git-prompt.zip

echo "Downloading https://github.com/zsh-users/zsh-syntax-highlighting/"
curl -# -L https://github.com/zsh-users/zsh-syntax-highlighting/archive/master.zip -o zsh-syntax-highlighting.zip
rm -rf zsh-syntax-highlighting-master
unzip -q zsh-syntax-highlighting.zip

echo "Downloading https://github.com/aurora/rmate/"
curl -# -L https://github.com/aurora/rmate/archive/master.zip -o rmate.zip
rm -rf rmate-master
unzip -q rmate.zip

echo "Downloading https://github.com/magicmonty/bash-git-prompt/"
curl -# -L https://github.com/magicmonty/bash-git-prompt/archive/master.zip -o bash-git-prompt.zip
rm -rf bash-git-prompt-master
unzip -q bash-git-prompt.zip

echo "Downloading https://github.com/tpope/vim-pathogen/"
curl -# -L https://github.com/tpope/vim-pathogen/archive/master.zip -o vim-pathogen.zip
rm -rf vim-pathogen-master
unzip -q vim-pathogen.zip

echo "Downloading https://github.com/easymotion/vim-easymotion/"
curl -# -L https://github.com/easymotion/vim-easymotion/archive/master.zip -o vim-easymotion.zip
rm -rf vim-easymotion-master
unzip -q vim-easymotion.zip

echo "Downloading https://github.com/ConradIrwin/vim-bracketed-paste/"
curl -# -L https://github.com/ConradIrwin/vim-bracketed-paste/archive/master.zip -o vim-bracketed-paste.zip
rm -rf vim-bracketed-paste-master
unzip -q vim-bracketed-paste.zip

echo "Downloading https://iterm2.com/misc/bash_startup.in"
curl -# -L https://iterm2.com/misc/bash_startup.in -o .iterm2_shell_integration.bash

echo "Downloading https://iterm2.com/misc/zsh_startup.in"
curl -# -L https://iterm2.com/misc/zsh_startup.in -o .iterm2_shell_integration.zsh

. makelinks
popd
